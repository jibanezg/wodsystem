/* World of Darkness Character Sheet Styles */
/* Theme colors applied via CSS variables from styles/themes/mortal.css */

.wod.sheet.actor {
    min-width: 800px;
    min-height: 600px;
    display: flex;
    flex-direction: column;
}

.wod.sheet.actor .sheet-body {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 3px;
    min-height: 0;
}

/* Identity Section - Character Header */
.wod.sheet.actor .sheet-header {
    padding: 5px 10px;
    background: var(--wod-bg-secondary, #f5f5f5);
    border-bottom: 2px solid var(--wod-primary, #2D5016);
    margin-bottom: 5px;
}

.wod.sheet.actor .identity-section {
    display: grid;
    grid-template-columns: 2fr 2fr 1.5fr 1.5fr;
    gap: 10px;
    align-items: end;
}

.identity-field {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.identity-field label {
    font-weight: bold;
    font-size: 10px;
    color: var(--wod-primary, #2D5016);
    text-transform: uppercase;
}

.identity-field input,
.identity-field select {
    padding: 3px 5px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-family: inherit;
    font-size: 11px;
}

.archetype-select {
    cursor: pointer;
}

/* Navigation Tabs */
.sheet-tabs {
    flex: 0;
    display: flex;
    border-bottom: 2px solid var(--wod-primary, #2D5016);
    background: var(--wod-bg-tertiary, #f0f0f0);
    padding: 0;
    margin: 0 0 3px 0;
}

.sheet-tabs .item {
    flex: 0 0 auto;
    font-weight: bold;
    padding: 4px 12px;
    margin: 0;
    background: #e0e0e0;
    border-right: 1px solid #ccc;
    cursor: pointer;
    font-size: 11px;
    text-transform: uppercase;
    white-space: nowrap;
    transition: background 0.2s;
}

.sheet-tabs .item:hover {
    background: #d0d0d0;
}

.sheet-tabs .item.active {
    background: var(--wod-primary, #2D5016);
    color: white;
    border-bottom: none;
}

/* Tab Content */
.tab {
    display: none;
}

.tab.active {
    display: block;
}

/* Main content layout - Grid based */
.main-layout {
    display: grid;
    grid-template-columns: 70% 30%;
    gap: 10px;
    padding: 5px;
    align-items: start;
}

.left-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.attributes-abilities-section {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.health-sidebar {
    display: flex;
    flex-direction: column;
    gap: 5px;
    min-width: 200px;
    max-height: 600px;
    overflow-y: auto;
}

.advantages-bottom {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    padding: 5px;
    border-top: 2px solid var(--wod-primary, #2D5016);
}

.advantage-column {
    display: flex;
    flex-direction: column;
    gap: 10px;
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 8px;
    background: #fafafa;
}

.advantage-column-spacer {
    /* Empty spacer to maintain 2-column grid alignment */
    display: none;
}

/* Legacy column classes for backwards compatibility */
.left-column {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.right-column {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.right-column-header {
    background: var(--wod-primary, #2D5016);
    color: white;
    padding: 5px;
    text-align: center;
    font-weight: bold;
    font-size: 14px;
    text-transform: uppercase;
    margin-bottom: 3px;
}

/* Section headers */
.attributes-section h2,
.abilities-section h2,
.health-section h2 {
    margin: 0 0 3px 0;
    padding: 2px 3px;
    background: var(--wod-primary, #2D5016);
    color: white;
    font-size: 0.9em;
    text-align: center;
    border-radius: 2px;
}

/* Attributes section */
.attributes-section {
    flex: 0 0 auto;
}

.attributes-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3px;
    height: auto;
}

.attribute-category {
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 2px;
}

.attribute-category h3 {
    margin: 0 0 2px 0;
    padding: 1px;
    background: #f0f0f0;
    font-size: 0.8em;
    text-align: center;
    border-bottom: 1px solid var(--wod-primary, #2D5016);
}

.attribute-list {
    display: flex;
    flex-direction: column;
    gap: 1px;
}

/* Abilities section */
.abilities-section {
    flex: 0 0 auto;
}

.abilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3px;
    height: auto;
}

.ability-category {
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 2px;
}

.ability-category h3 {
    margin: 0 0 2px 0;
    padding: 1px;
    background: #f0f0f0;
    font-size: 0.8em;
    text-align: center;
    border-bottom: 1px solid var(--wod-primary, #2D5016);
}

.ability-list {
    display: flex;
    flex-direction: column;
    gap: 1px;
}

/* Mortal Powers section */
.mortal-powers-section {
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 8px 10px;
    margin-bottom: 5px;
}

.numina-section {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.numina-section h4 {
    margin: 0 0 5px 0;
    padding: 3px 5px;
    background: #f0f0f0;
    font-size: 0.75em;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.numina-info {
    font-size: 0.7em;
    font-style: italic;
    padding: 8px 10px;
    background: #f9f9f9;
    border-left: 2px solid var(--wod-primary, #2D5016);
    margin-bottom: 5px;
}

.willpower-section {
    margin-bottom: 5px;
}

.willpower-section h4 {
    margin: 0 0 2px 0;
    padding: 3px 5px;
    background: #f0f0f0;
    font-size: 0.75em;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.willpower-tracks {
    display: flex;
    flex-direction: column;
    gap: 3px;
    padding: 5px;
}

.willpower-permanent,
.willpower-temporary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.7em;
}

.willpower-permanent label,
.willpower-temporary label {
    font-weight: bold;
    margin-right: 3px;
}

/* Temporary willpower uses squares instead of circles */
.willpower-temporary .dot {
    border-radius: 0;  /* Remove circular shape for squares */
}

.backgrounds-section h4 {
    margin: 5px 0 2px 0;
    padding: 3px 5px;
    background: #f0f0f0;
    font-size: 0.75em;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.background-list {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding: 5px;
}

.background {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1px 0;
    font-size: 0.7em;
}

.background label {
    font-weight: bold;
}

.numina-placeholder {
    font-size: 0.7em;
    font-style: italic;
    padding: 8px 10px;
    background: #fff9e6;
    border: 1px dashed #a67c00;
    text-align: center;
    margin-top: 5px;
}

/* Health section */
.health-section {
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 5px;
    display: flex;
    flex-direction: column;
}

.reset-health {
    padding: 4px 6px;
    font-size: 0.7em;
    background: transparent;
    color: var(--wod-primary, #2D5016);
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.2s;
}

.reset-health:hover {
    background: var(--wod-primary, #2D5016);
    color: white;
}

.health-view-controls {
    display: flex;
    gap: 5px;
    justify-content: flex-end;
    padding: 5px;
    border-top: 1px solid #ddd;
    margin-top: 5px;
}

.health-edit-controls {
    display: flex;
    gap: 5px;
    justify-content: flex-end;
    padding-top: 8px;
    margin-top: 5px;
    border-top: 1px solid #ddd;
}

.reset-health i {
    font-size: 10px;
}

.health-track {
    display: flex;
    flex-direction: column;
    gap: 3px;
    padding: 5px;
    margin-bottom: 5px;
}

.health-level {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
    font-size: 0.75em;
}

.health-box {
    width: 18px;
    height: 18px;
    min-width: 18px;
    border: 2px solid var(--wod-primary, #2D5016);
    background: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    position: relative;
}

.health-box:hover {
    background: #ffeeee;
    transform: scale(1.1);
    box-shadow: 0 0 3px rgba(128, 0, 0, 0.3);
}

/* Bashing: X character inside the square */
.health-box.damage-bashing {
    background: white;
}

.health-box.damage-bashing::after {
    content: "X";
    font-size: 14px;
    font-weight: bold;
    color: var(--wod-primary, #2D5016);
    line-height: 1;
}

/* Lethal: Diagonal stripes (zebra pattern) */
.health-box.damage-lethal {
    background: repeating-linear-gradient(
        45deg,
        white,
        white 2px,
        var(--wod-primary, #2D5016) 2px,
        var(--wod-primary, #2D5016) 4px
    );
}

/* Aggravated: Solid filled square */
.health-box.damage-aggravated {
    background: var(--wod-primary, #2D5016);
}

.health-name {
    font-weight: bold;
    min-width: 85px;
}

.health-penalty {
    font-size: 0.85em;
    color: #dc143c;
    font-weight: bold;
    min-width: 20px;
}

.health-summary {
    margin-top: 5px;
    padding: 5px;
    border-top: 1px solid #ccc;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 5px;
    font-size: 0.65em;
    align-items: center;
}

.health-stat {
    text-align: center;
}

.health-stat label {
    font-size: 9px;
    text-transform: uppercase;
    color: #666;
    display: block;
}

.health-stat span {
    font-size: 14px;
    font-weight: bold;
    display: block;
}

/* Health Edit Mode */
.toggle-health-edit {
    padding: 4px 6px;
    font-size: 0.7em;
    background: transparent;
    color: var(--wod-primary, #2D5016);
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.2s;
}

.toggle-health-edit:hover {
    background: var(--wod-primary, #2D5016);
    color: white;
}

.toggle-health-edit i {
    margin: 0;
}

.health-edit-mode {
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 5px;
}

.health-level-edit {
    display: flex;
    gap: 5px;
    align-items: center;
    padding: 5px;
    background: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 2px;
}

.health-name-edit {
    flex: 4;
    padding: 4px 6px;
    font-size: 0.75em;
    border: 1px solid #ccc;
    border-radius: 2px;
}

.health-penalty-edit {
    width: 60px;
    padding: 4px 6px;
    font-size: 0.75em;
    border: 1px solid #ccc;
    border-radius: 2px;
    text-align: center;
}

.delete-health-level {
    width: 20px;
    height: 20px;
    padding: 0;
    font-size: 10px;
    background: transparent;
    color: #dc143c;
    border: 1px solid #dc143c;
    border-radius: 3px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
}

.delete-health-level:hover {
    background: #dc143c;
    color: white;
}

.add-health-level {
    padding: 4px 6px;
    font-size: 0.7em;
    background: transparent;
    color: #228b22;
    border: 1px solid #228b22;
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.2s;
}

.add-health-level:hover {
    background: #228b22;
    color: white;
}

.add-health-level i {
    margin: 0;
}

/* Dot-based interface styles */
.attribute, .ability {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1px 0;
    border-bottom: 1px solid #eee;
    font-size: 0.7em;
}

.attribute:last-child, .ability:last-child {
    border-bottom: none;
}

.attribute label, .ability label {
    flex: 1;
    font-weight: bold;
    margin-right: 3px;
}

.dot-container {
    display: flex;
    gap: 1px;
    align-items: center;
}

.dot {
    width: 8px;
    height: 8px;
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s ease;
    background: white !important;
}

.dot:hover {
    background: #ffcccc !important;
    transform: scale(1.2);
}

.dot.filled {
    background: var(--wod-primary, #2D5016) !important;
}

.dot.filled:hover {
    background: var(--wod-primary-dark, #600000) !important;
}

/* Hidden input field for form submission */
.dot-input, .health-input {
    display: none;
}

/* Biography Tab Content */
.biography-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
    font-size: 0.8em;
}

.bio-fields-section h3,
.secondary-abilities-section h3,
.virtues-humanity-section h3,
.backstory-section h3,
.notes-section h3 {
    margin: 0 0 5px 0;
    padding: 3px;
    background: var(--wod-primary, #2D5016);
    color: white;
    font-size: 1em;
    text-align: center;
    border-radius: 2px;
}

.bio-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
}

.bio-field {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.bio-field label {
    font-size: 10px;
    font-weight: bold;
    text-transform: uppercase;
    color: var(--wod-primary, #2D5016);
}

.bio-field input {
    padding: 3px 5px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-size: 11px;
}

/* Secondary Abilities */
.secondary-abilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
}

.secondary-ability-category {
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 5px;
}

.secondary-ability-category h4 {
    margin: 0 0 5px 0;
    padding: 2px;
    background: #f0f0f0;
    font-size: 0.85em;
    text-align: center;
    border-bottom: 1px solid var(--wod-primary, #2D5016);
}

.secondary-ability {
    display: flex;
    gap: 5px;
    align-items: center;
    margin-bottom: 3px;
    font-size: 0.75em;
}

.secondary-ability .ability-name {
    flex: 1;
    padding: 2px 4px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-size: 10px;
}

.delete-secondary-ability {
    cursor: pointer;
    color: #dc143c;
    font-size: 12px;
}

.delete-secondary-ability:hover {
    color: #8b0000;
}

button {
    padding: 3px 8px;
    background: var(--wod-primary, #2D5016);
    color: white;
    border: none;
    border-radius: 2px;
    cursor: pointer;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 9px;
    transition: background 0.2s;
    margin-top: 3px;
}

button:hover {
    background: #a00000;
}

/* Virtues & Humanity - Compact Layout */
.virtues-humanity-section {
    margin-bottom: 5px;
}

.virtues-humanity-section h4 {
    margin: 0 0 2px 0;
    padding: 3px 5px;
    background: #f0f0f0;
    font-size: 0.75em;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.virtues-compact {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding: 8px;
}

.virtue-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.7em;
}

.virtue-item label {
    font-weight: bold;
    min-width: 80px;
    color: var(--wod-primary, #2D5016);
}

.humanity-item {
    border-top: 1px solid #ddd;
    padding-top: 2px;
    margin-top: 2px;
}

/* Backstory and Notes */
textarea {
    width: 100%;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-family: inherit;
    font-size: 11px;
    resize: vertical;
}

/* Merits & Flaws Tab */
.merits-flaws-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
}

.merits-section,
.flaws-section {
    border: 1px solid var(--wod-primary, #2D5016);
    border-radius: 2px;
    padding: 5px;
}

.merits-section h3,
.flaws-section h3 {
    margin: 0 0 5px 0;
    padding: 3px;
    background: var(--wod-primary, #2D5016);
    color: white;
    font-size: 0.9em;
    text-align: center;
    border-radius: 2px;
}

.merit-list, .flaw-list {
    display: flex;
    flex-direction: column;
    gap: 3px;
}

.merit-item, .flaw-item {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 0.75em;
}

.merit-name, .flaw-name {
    flex: 1;
    padding: 3px 5px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-size: 11px;
}

.delete-merit, .delete-flaw, .delete-background {
    cursor: pointer;
    color: #dc143c;
    font-size: 12px;
}

.delete-merit:hover, .delete-flaw:hover, .delete-background:hover {
    color: #8b0000;
}

/* Background Item Styling */
.background-item {
    display: flex;
    gap: 5px;
    align-items: center;
    margin-bottom: 3px;
    font-size: 0.75em;
}

.background-name-select {
    flex: 1;
    padding: 2px 4px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-size: 10px;
}

.background-custom-name {
    flex: 1;
    padding: 2px 4px;
    border: 1px solid #ccc;
    border-radius: 2px;
    font-size: 10px;
}

.background-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 5px;
    padding-top: 5px;
    border-top: 1px solid #ddd;
}

.background-pagination {
    display: flex;
    align-items: center;
    gap: 8px;
}

.pagination-btn {
    width: 24px;
    height: 24px;
    padding: 0;
    border: 1px solid var(--wod-primary, #2D5016);
    background: white;
    color: var(--wod-primary, #2D5016);
    border-radius: 3px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    transition: all 0.2s;
}

.pagination-btn:hover:not(:disabled) {
    background: var(--wod-primary, #2D5016);
    color: white;
}

.pagination-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    border-color: #ccc;
    color: #ccc;
}

.pagination-info {
    font-size: 0.7em;
    color: #666;
    min-width: 40px;
    text-align: center;
}

.merit-flaw-summary {
    grid-column: 1 / -1;
    display: flex;
    justify-content: space-around;
    padding: 10px;
    background: #f0f0f0;
    border-radius: 2px;
    margin-top: 10px;
    font-size: 0.8em;
}

.summary-item {
    text-align: center;
}

.summary-item label {
    font-weight: bold;
    display: block;
    margin-bottom: 3px;
}

/* Minimal + Button Styling */
button.add-merit,
button.add-flaw,
button.add-background,
button.add-secondary-talent,
button.add-secondary-skill,
button.add-secondary-knowledge {
    width: 24px;
    height: 24px;
    padding: 0;
    font-size: 16px;
    line-height: 1;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--wod-primary, #2D5016);
    color: white;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
    margin-top: 5px;
}

button.add-merit:hover,
button.add-flaw:hover,
button.add-background:hover,
button.add-secondary-talent:hover,
button.add-secondary-skill:hover,
button.add-secondary-knowledge:hover {
    background: var(--wod-primary-dark, #600000);
}

/* Responsive Design */
@media (max-width: 800px) {
    .wod.sheet.actor {
        min-width: 600px;
    }
    
    .main-layout {
        grid-template-columns: 1fr;
    }
    
    .left-content {
        order: 1;
    }
    
    .health-sidebar {
        order: 2;
    }
    
    .advantages-bottom {
        grid-template-columns: 1fr;
    }
    
    .advantage-column-spacer {
        display: none;
    }
    
    .attributes-grid,
    .abilities-grid {
        grid-template-columns: 1fr;
    }
}
